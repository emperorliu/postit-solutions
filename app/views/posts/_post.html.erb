<div class="row">
  <% if logged_in? %>
    <div class='span 0 well text-center'>
      <%= link_to vote_post_path(post, vote: true), remote: true, method: 'post' do %>
        <i class='icon-arrow-up'></i>
      <% end %>
      <br/>
      <span id='post_<%=post.id%>_votes'><%= post.total_votes %></span>
      <br/>
      <%= link_to vote_post_path(post, vote: false), remote: true, method: 'post' do %>
        <i class='icon-arrow-down'></i>
      <% end %>
    </div>
  <% end %>
  <div class='span8 well'>
    <%= render post.categories %>
    <h4><%= link_to post.title, fix_url(post.url) %></h4>
     <p><%= post.description %></p>
     <p>
       <span class='quiet'>posted by</span> 
        <%= link_to post.creator.username, user_path(post.creator) %>
       <small>at <%= display_datetime(post.created_at) %></small>
     </p>
     <span>
       <small><%= link_to "#{post.comments.size} comments", post_path(post)%></small>
    </span>
  </div>
</div>